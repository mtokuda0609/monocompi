<div class="row">
  <div class="col-md-9">
    <div>ユーザID / メールアドレス / パスワード</div>
    <%= form_for(@user) do |f| %>
      <table class="table table-bordered">
        <tr>
          <th>ユーザID</th>
          <td>
            <p><6文字以上、半角英数字></p>
            <%= f.text_field :name, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <p><半角英数字></p>
            <%= f.email_field :email, class: 'form-control' %><br>
            <p>確認のためもう一度入力してください（コピー・貼り付けはしないでください）</p>
            <%#= f.email_field :email_confirmation, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td>
            <p><6文字以上、半角英数字></p>
            <%= f.password_field :password, class: 'form-control' %><br>
            <p>確認のためもう一度入力してください</p>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </td>
        </tr>
      </table>
      
      <div>お客様基本情報</div>
      <table class="table table table-bordered">
        <tr>
          <th>氏名</th>
          <td>
            （姓）<%= f.text_field :fam_name, class: 'form-control' %>
            （名）<%= f.text_field :giv_name, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <th>氏名（フリガナ）</th>
          <td>
            （セイ）<%= f.text_field :fam_name_kana, class: 'form-control' %>
            （メイ）<%= f.text_field :giv_name_kana, class: 'form-control' %>
          </td>
        </tr>
      </table>
      
      <div class="text-center">
        <%= f.submit '登録', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
